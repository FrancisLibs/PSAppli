{{ form_start(form) }}
    <div class="row p-3 interventions">
        <div class="col-12">
            <div class="row">
                <div class="text-primary">
                    <h4>Intervention</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    {{ form_label(form.request) }}  
                    {{ form_widget(form.request) }}  
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12">
                    {{ form_label(form.remark) }}  
                    {{ form_widget(form.remark) }}  
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-primary ">
            <h4>Calendrier</h4>
        </div>
    </div>
    <div class="row">
        <div class="col-2">
            {{ form_label(form.period) }}  
            {{ form_widget(form.period) }} 
        </div>
        <div class="col-2">
            {{ form_label(form.sliding) }}  
            {{ form_widget(form.sliding) }} 
        </div>
        <div class="col-2">
            {{ form_label(form.nextDate) }}  
            {{ form_widget(form.nextDate) }} 
        </div>
        <div class="col-2">
            {{ form_label(form.daysBefore) }}  
            {{ form_widget(form.daysBefore) }} 
        </div>
        <div class="col-2">
            {{ form_label(form.duration) }}  
            {{ form_widget(form.duration) }} 
        </div>
        <div class="col-2">
            {{ form_label(form.daysBeforeLate) }}  
            {{ form_widget(form.daysBeforeLate) }} 
        </div>
    </div>
    <div class="row">
        <div class="col-3 text-center mt-4 mb-5">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
        <div class="col-7 text-right mt-2">
            <p>Glissant : La prochaine date d'éxecution sera calculée à partir de la date de réalisation</p>
        </div>
    </div>
