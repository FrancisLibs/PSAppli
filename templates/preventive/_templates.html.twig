{% for template in templates %}
    <tr>
        <td data-label="Numéro" class="font_size_table">
            <a class="btn ntn-sm btn-primary" href="{{ path('template_show', {'id': template.id}) }}">{{ template.templateNumber }}</a>
        </td>
        <td data-label="Demande" class="text-center font_size_table">{{ template.request }}</td>
        <td data-label="Prochaine date" class="text-center font_size_table">{{ template.nextDate|date("d/m/Y") }}</td>
        <td data-label="Machines" class="text-center font_size_table" >
            {% for machine in template.machines %}
                <div class="d-flex justify-content-center align-items-center">
                    <div class="text-start me-3">{{ machine.internalCode }}</div>
                    <div class="text-start">{{ machine.designation }}</div>
                </div>
            {% endfor %}    
        </td>
    </tr>
{% else %}
    <tr>
        <td colspan="6">Il n'y a pas de bons de travail enregistré</td>
    </tr>
{% endfor %}