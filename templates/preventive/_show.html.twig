<div class="row">
    <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-start align-items-center">
        <h4 class="text-primary">Numéro : </h4>
        <h5 class="champs_bt text-center">{{ template.templateNumber }}</h5>
    </div>
    <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-start">
        <h4 class="text-primary">Créé le : </h4>
        <h5 class="champs_bt text-center">{{ template.createdAt ? template.createdAt|date('d-m-Y', timezone="Europe/Paris") : '' }}</h5>
    </div>
    <div class="col-12 col-sm-6 col-md-4 d-flex justify-content-start">
        <h4 class="text-primary">Par : </h4>
        <h5 class="champs_bt text-center">{{ template.user.firstName }}</h5>
    </div>
</div>
<div class="row mt-4">
    <div class="col-2">
        <h4 class="text-primary">Machine(s) </h4>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-sm table-striped">
            <thead>
                <tr class="sorting">
                    <th scope="col">Numéro</th>
                    <th class="text-center" scope="col">Désignation</th>
                    <th class="text-center" scope="col">Num. série</th>
                    <th class="text-center" scope="col">Constructeur</th>
                </tr>
            </thead>
            <tbody>
                {% for machine in template.machines %}
                    <tr>
                        <td data-label="Code">{{ machine.internalCode }}</td>
                        
                        <td data-label="Désignation" class="text-center">{{ machine.designation ? machine.designation : '-' }}</td>
                        <td data-label="Numéro de série" class="text-center">{{  machine.serialNumber ?  machine.serialNumber : '-' }}</td>
                        <td data-label="Constructeur" class="text-center">{{  machine.constructor ?  machine.constructor : '-' }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% if template.request %}
    <div class="row mt-4">
        <div class="col-8">
            <h4 class="text-primary">Demande : </h4>
        </div>
    </row>
    <div class="row">
        <div class="col-12 border border-info rounded">
            <p>{{ template.request }}</p>
        </div>
    </div>
{% endif %}

{% if template.remark %}
    <div class="row">
        <div class="col-8">
            <h4 class="text-primary">Remarque : </h4>
        </div>
    </div>
    <div class="row">
        <div class="col-12 border border-info rounded">
            <p>{{ template.remark|nl2br }}</p>
        </div>
    </div>
{% endif %}

<div class="row mt-4">
    <div class="col-8">
        <h4 class="text-primary">Temps : </h4>
    </div>
</div>
<div class="row mb-5">
    <div class="col-12 border border-info rounded">
        <table class="table">
            <thead>
                <tr class="sorting">
                    <th scope="col">Période</th>
                    <th scope="col" class="text-center">Glissant</th>
                    <th scope="col" class="text-center">Prochaine date</th>
                    <th scope="col" class="text-center">Préparation</th>
                    <th scope="col" class="text-center">Durée</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td data-label="Période">{{ template.period }}</td>
                    <td data-label="Glissant" class="text-center">{{ template.sliding ? "OUI" : "NON" }}</td>
                    <td data-label="Prochaine date" class="text-center">{{ template.nextDate|date('d-m-Y', timezone="Europe/Paris") }}</td>
                    <td data-label="Préparation" class="text-center">{{ template.daysBefore }}</td>
                    <td data-label="Durée" class="text-center">{{ template.duration ? template.duration : "-"}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>