{% extends 'base.html.twig' %}

{% block title %}Pièce détachée
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="/assets/css/part-show.css">
{% endblock %}

{% block body %}
	<div class="row part-js-filter justify-content-start mt-5">
		{% include 'user/_photo.html.twig' %}
		<article class="col-10">
			<section class="row justify-content-between">
				<div class="d-flex justify-content-between flex-wrap mb-4">
					<div class="d-flex justify-content-start align-items-center">
						<div class="me-5">
							<h1 class="page-title">Pièce détachée</h1>
						</div>
						<div class="d-flex justify-content-start flex-wrap">
							<a class="btn btn-primary btn-sm btn-middle me-2 mb-2" href="{{ path('part_index') }}" role="button">Liste pièces</a>
							<a class="btn btn-primary btn-sm btn-middle me-2 mb-2" href="{{ path('part_edit', {'id': part.id}) }}">Edition</a>
							<a class="btn btn-warning btn-sm btn-middle me-2 mb-2" href="{{ path('part_label', {'id': part.id}) }}">Etiquette</a>
							{{ include('part/_delete_form.html.twig') }}
							<a class="btn btn-info btn-sm btn-middle ms-2 mb-2" href="{{ path('show_appro', {'id': part.id}) }}">Appro</a>

						</div>
					</div>
				</div>
			</section>
			<section>
				<div class="row mt-5">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Code</p>
					</div>
					<div class="col-8">
						<p>{{ part.code }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Designation</p>
					</div>
					<div class="col-8">
						<p>{{ part.designation }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Reference</p>
					</div>
					<div class="col-8">
						<p>{{ part.reference }}</p>
					</div>
				</div>
				{% if part.provider %}
					<div class="row">
						<div class="col-4 col-sm-3 col-md-2">
							<p class="fw-bold">Fournisseur</p>
						</div>
						<div class="col-8">
							<p>{{ part.provider.name }}</p>
						</div>
					</div>
				{% endif %}
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Qte Stock</p>
					</div>
					<div class="col-8">
						<p>{{ part.stock.qteStock }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Qte Min Stock</p>
					</div>
					<div class="col-8">
						<p>{{ part.stock.qteMin }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Qte Max Stock</p>
					</div>
					<div class="col-8">
						<p>{{ part.stock.qteMax }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Emplacement Stock</p>
					</div>
					<div class="col-8">
						<p>{{ part.stock.place }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Prix moyen</p>
					</div>
					<div class="col-8">
						<p>{{ part.steadyPrice }}</p>
					</div>
				</div>
				<div class="row">
					<div class="col-4 col-sm-3 col-md-2">
						<p class="fw-bold">Remarque</p>
					</div>
					<div class="col-6">
						<p>{{ part.remark }}</p>
					</div>
				</div>
				{# {% if part.qrCode %}
												                    <div class="row">
												                        <div class="col-4 col-sm-3 col-md-2">
												                            <p class="fw-bold">QrCode</p>
												                        </div>
												                        <div class="col-8">
												                            <img src="{{ asset('images/qr-codes/' ~ part.qrCode) | imagine_filter('my_little_filter') }}" />
												                        </div>
												                    </div>
												                {% endif %} #}
			</section>
			<section>
				{% if part.machines is not empty %}
					<h3>Machines</h3>
					{% for machine in part.machines %}
						<p>-
							{{ machine.internalCode ~ " " }}{{ machine.designation }}</p>
					{% endfor %}
				{% endif %}
			</section>
		</article>
	</div>
{% endblock %}
