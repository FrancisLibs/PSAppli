{{ form_start(form) }}
    <div class="row p-3 interventions">
        <div class="col-11">
            <div class="row">
                <div class="text-primary">
                    <h4>Intervention</h4>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="mt-2">
                        {{ form_label(form.request) }}  
                        {{ form_widget(form.request) }}  
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.implementation) }}  
                        {{ form_widget(form.implementation) }}  
                    </div>
                    <div class="mt-2">
                        {{ form_label(form.remark) }}  
                        {{ form_widget(form.remark) }}  
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-4" id="time_management">
        <div class="col-2 text-primary">
            <h4 class="mb-2">Type BT</h4>
            {{ form_widget(form.type) }}  
        </div>
        <div class="col-10">
            <div class="row">
                <div class="text-primary">
                    <h4>Temps</h4>
                </div>
            </div>
            <div class="row justify-content-start">
                <div>
                    <span>Date début</span>
                    {{ form_widget(form.startDate) }}
                </div>
                <div class="ml-4">
                    <span>Heure début</span>
                    {{ form_widget(form.startTime) }}
                </div>
                <div class="ml-4 " id="duration"> {# id="duration" est là pour la surveillance javascript #}
                    <div>Durée :</div>
                    <div class="d-flex align-items-center">
                        <div class="d-flex mr-2">
                            <span>Jours</span>
                            <span class="ml-1 caseTemps">
                                {{ form_widget(form.durationDay) }}
                            </span>
                        </div>
                        <div class="d-flex mr-2">
                            <span>Heures</span>
                            <span class="ml-1 caseTemps">
                                {{ form_widget(form.durationHour) }}
                            </span>
                        </div>
                        <div class="d-flex mr-2">
                            <span>Minutes</span>
                            <span class="ml-1 caseTemps">
                                {{ form_widget(form.durationMinute) }}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row pt-4" id="end_time">
                <div>
                    <span>Date fin</span>
                    {{ form_widget(form.endDate) }}
                </div>
                <div class="ml-4" id="end_time">
                    <span>Heure fin</span>
                    {{ form_widget(form.endTime) }}
                </div>
                <div class="ml-4">
                    <span>Arrêt machine</span>
                    <div class="d-flex justify-content-start">
                        <span>Heures</span>
                        <span class="ml-1 mr-3 caseTemps">
                            {{ form_widget(form.stopTimeHour) }}
                        </span>
                        <span>Minutes</span>
                        <span class="ml-1 caseTemps">
                            {{ form_widget(form.stopTimeMinute) }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-2 mb-5 text-center">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>
{{ form_end(form) }}