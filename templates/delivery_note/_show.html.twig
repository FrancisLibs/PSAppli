<div class="col-11 col-xl-8">
    <div class="row mt-4">
        <div class="col-8 col-sm-6 col-md-4 col-lg-3 col-xl-4">
            <span><strong>Numéro de BL : </strong></span>
                {{ delivery_note.number }}
            </p>
        </div>
        <div class="col-8 col-sm-4 col-md-4 col-lg-3 col-xl-4">
            <p>
                <strong>Date : </strong>
                {{ delivery_note.date ? delivery_note.date|date('d-m-Y') : '' }}
            </p>
        </div>
        <div class="col-10 col-sm-8 col-md-4 col-lg-3 col-xl-4">
            <p>
                <strong>Fournisseur : </strong>
                {{ delivery_note.provider.name }}
            </p>
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-9 d-flex justify-content-start align-items-center">
            <h3 class="text-primary me-5">Pièces détachées</h3>
        </div>
    </div>
    <div class="row mt-3">
        <table class="table table-sm table-striped">
            <head>
                <tr class="sorting">
                    <th scope="row">Code</th>
                    <th scope="row" class="text-center">Désignation</th>
                    <th scope="row" class="text-center">Référence</th>
                    <th scope="row" class="text-center">Qte</th>
                </tr>
            </head>
            <body>
                {% for part in delivery_note.deliveryNoteParts %}
                    <tr>
                        <td data-label="Code">{{ part.part.code }}</td>
                        <td data-label="Désignation" class="text-center">{{ part.part.designation ? part.part.designation : "-" }}</td>
                        <td data-label="Référence" class="text-center">{{ part.part.reference ? part.part.reference : "-"  }}</td>
                        <td data-label="Quantité" class="text-center">{{ part.quantity ? part.quantity : "-"  }}</td>
                    </tr>
                {% endfor %}
            </body>
        </table>
    </div>
</div>