{{ form_start(form, {'action' : path('user_edit', { 'id': user.id } )}) }}   
    <div class="row mb-4 justify-content-start">
        <div class="col-lg-6">
            <div class="row">
                <div class="col-6">
                    {{ form_label(form.firstName) }}
                    {{ form_widget(form.firstName) }}
                </div>
                <div class="col-6">
                    {{ form_label(form.lastName) }}  
                    {{ form_widget(form.lastName) }}  
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-6">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>
                <div class="col-6">
                    {{ form_label(form.phoneNumber) }}  
                    {{ form_widget(form.phoneNumber) }}  
                </div>
            </div>
            <div class="row mt-3">
               <div class="col-6">
                    {{ form_errors(form.organisation) }}
                    {{ form_label(form.organisation) }}
                    {{ form_widget(form.organisation) }}
                </div> 
                <div class="col-4">
                    {{ form_errors(form.service) }}
                    {{ form_label(form.service) }}
                    {{ form_widget(form.service) }}
                </div>
            </div>
        </div>
        <div class="col-6 mt-3">
            {{ form_label(form.imageFile) }}
            {{ form_widget(form.imageFile) }}        
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-4">
            <button type="submit" class="btn btn-primary pull-right w-100 mt-3">Valider</button>
        </div>
    </div>             
{{ form_end(form) }}