                            {{ form_widget(form.durationMinutes) }}  
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <button class="btn btn-primary mt-5">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
